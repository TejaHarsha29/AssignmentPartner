<?xml version="1.0" encoding="utf-8"?>


<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:fillViewport="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".ScanActivity">





<RelativeLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#f8ab39"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"></ImageView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/aclonica"
            android:text="Assignment Partner"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"

            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"

            android:contentDescription="TODO"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_back"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/convert_textv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:text="Convert"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"

            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:gravity="center_horizontal"

                >

                <TextView
                    android:id="@+id/title"
                    android:layout_marginTop="55dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/andada"
                    android:text="Extracted Text"
                    android:textColor="#a134d3"
                    android:layout_centerHorizontal="true"
                    android:textSize="20dp"
                    ></TextView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="340.2dp"
                    android:layout_height="481.14dp"
                    android:layout_gravity="fill"
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    android:layout_below="@+id/title">

                    <EditText
                        android:id="@+id/edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/et_stro"
                        android:gravity="top"
                        android:hint="Scan Multiple Images one after the other and the exctracted text will be Shown here..Make Sure Page seperators are placed in correct position!!           Note:You can select any number of images one after the other and the every time you scan image page seperator is added :)"
                        android:padding="10dp"
                        android:textSize="14sp"></EditText>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/andada"
                    android:text="Text size"
                    android:textColor="#a134d3"
                    android:textSize="18sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:layout_below="@id/cardView"></TextView>

                <SeekBar
                    android:id="@+id/seek"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="5dp"
                    android:max="100"
                    android:layout_below="@+id/size"

                    android:progressBackgroundTint="@color/black"
                    android:progressTint="#a134d3"

                    android:thumbTint="#a134d3"
                    ></SeekBar>




                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="5dp"

                    android:layout_below="@+id/seek"
                    android:layout_marginBottom="10dp"


                    android:layout_gravity="fill"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    >

                    <ImageView
                        android:id="@+id/ScanButton"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"

                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"

                        android:alpha="0.75"
                        android:padding="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.157"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0"
                        app:srcCompat="@drawable/scan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:text="Scan"
                        android:textColor="#a134d3"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>


                </androidx.cardview.widget.CardView>





            </RelativeLayout>
















    </androidx.constraintlayout.widget.ConstraintLayout>





</RelativeLayout>
</ScrollView>
